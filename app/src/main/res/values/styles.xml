<resources>

    <!-- Base application theme. -->
    <style name="Base.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ToolbarPopUp" parent ="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:editTextColor">@color/colorPrimary</item>
    </style>

</resources>
